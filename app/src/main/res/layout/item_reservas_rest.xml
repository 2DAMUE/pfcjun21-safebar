<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvFechaReservasRestItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                style="@style/Text.Subtitulo.RobotoMedium.Italic"
                android:textSize="18dp"
                android:textColor="@color/green_light"
                android:text="10/03/2004"/>

            <TextView
                android:id="@+id/tvNomUsuReservasRestItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Subtitulo.RobotoMedium"
                android:textSize="24dp"
                android:textColor="@color/green_dark"
                android:layout_marginStart="8dp"
                android:text="Burger King"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="2.8dp"
                        android:src="@drawable/ic_reloj"
                        app:tint="@color/cardview_shadow_start_color" />
                    <TextView
                        android:id="@+id/tvHoraReservasRestItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        style="@style/Text.Titulo"
                        android:text="10:00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="2.8dp"
                        android:src="@drawable/ic_persona"
                        app:tint="@color/cardview_shadow_start_color"/>
                    <TextView
                        android:id="@+id/tvNumPersonasReservasRestItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        style="@style/Text.Titulo"
                        android:layout_weight="1"
                        android:text="4"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_qr_scanner"
                app:tint="@color/green_dark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="VERIFICAR"
                android:textSize="14sp"
                android:textColor="@color/green_dark"
                style="@style/Text.Subtitulo.RobotoMedium"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>