<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CheckQRFragment">

    <ImageView
        android:id="@+id/imgQRStatus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_qr_escanear"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        app:tint="@color/green_dark" />

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123813920123SA"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="italic"
        style="@style/Text.Subtitulo.RobotoMedium.Italic"
        />

    <Button
        android:id="@+id/btnEscanear"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ESCANEAR QR"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <Button
        android:id="@+id/btnValidar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Validar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>



</LinearLayout>