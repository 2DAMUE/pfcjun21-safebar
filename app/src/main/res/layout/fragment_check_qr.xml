<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CheckQRFragment">

    <ImageView
        android:id="@+id/imgQRStatus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_qr_scanner"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        app:tint="@color/green_dark"
        android:contentDescription="@string/qr_code" />

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="italic"
        style="@style/Text.Subtitulo.RobotoMedium.Italic"
        />

    <Button
        android:id="@+id/btnEscanear"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/escanear_qr"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnValidar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/validar"
            app:cornerRadius="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:fontFamily="@font/oswald_light"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"/>
    </LinearLayout>




</LinearLayout>