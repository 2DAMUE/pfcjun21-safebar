<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EditarPerfilFragment">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgEditPerfFrag"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/imbEditPerfFrag"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="-180dp"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="@string/editperf_frag_tv_nombre"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"

        style="@style/TextInput.Outlined.WithBackground">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditPerfFragNom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="@string/editperf_frag_tv_email"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        style="@style/TextInput.Outlined.WithBackground">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditPerfFragEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="@string/editperf_frag_tv_pw"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        style="@style/TextInput.Outlined.WithBackground">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditPerfFragPW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="@string/editperf_frag_tv_direc"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        style="@style/TextInput.Outlined.WithBackground">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditPerfFragDirec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarEditPerfFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/editperf_frag_btn_guardar"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarEditPerfFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="@string/ditperf_frag_btn_cancelar"
            android:backgroundTint="@color/green_light"/>


    </LinearLayout>

</LinearLayout>