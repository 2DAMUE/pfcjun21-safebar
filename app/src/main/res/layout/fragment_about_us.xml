<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutUs">





    <ImageView
        android:id="@+id/im_fragment_foto1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="-250dp" />

    <TextView
        android:id="@+id/tvFragmentDesFoto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:textSize="24sp"
        android:text="@string/tvFragementDesFoto1"/>

    <ImageView
        android:id="@+id/im_fragment_foto2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp" />
    <TextView
        android:id="@+id/tvFragmentDesFoto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:textSize="24sp"
        android:text="@string/tvFragementDesFoto2"/>

    <ImageView
        android:id="@+id/im_fragment_foto3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="230dp" />
    <TextView
        android:id="@+id/tvFragmentDesFoto3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:textSize="24sp"
        android:text="@string/tvFragementDesFoto3"/>
</FrameLayout>