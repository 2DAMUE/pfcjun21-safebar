<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.BookingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald_light"
        android:textAlignment="center"
        android:textSize="28dp"
        android:text="¿Estás listo para reservar en tu restaurante favorito?"
        android:textColor="@color/green_dark"
        style="@style/TextAppearance.AppCompat.Headline"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comida"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            style="@style/Text.Subtitulo.RobotoMedium"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchComidaCena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            style="@style/Text.Subtitulo.RobotoMedium"
            android:text="Cena"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:hint="Fecha"
            android:focusable="false"
            android:layout_gravity="center"
            android:focusableInTouchMode="false"
            style="@style/TextInput.Outlined.WithBackground">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBookingFragFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_calendario"-->
<!--            android:layout_marginLeft="6dp"/>-->
        <Button
            android:id="@+id/btnSelecFecha"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_calendario"
            android:drawableTint="@color/white"
            android:backgroundTint="@color/green_light"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Hora"
            android:layout_gravity="center"
            style="@style/TextInput.Outlined.WithBackground">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBookingFragHora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnSelecHora"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_reloj"
            android:drawableTint="@color/white"
            android:backgroundTint="@color/green_light"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Número de personas"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        style="@style/TextInput.Outlined.WithBackground">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBookingFragNumPers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

<!--    <com.google.android.material.button.MaterialButton-->
<!--        android:id="@+id/btnBookingFragReservar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="24dp"-->
<!--        android:layout_marginStart="50dp"-->
<!--        android:layout_marginEnd="50dp"-->
<!--        android:text="Reservar"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBookingFragReservar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="@string/restaurante_frag_btn_reservar"
            android:fontFamily="@font/oswald_light"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            />

    </LinearLayout>

</LinearLayout>