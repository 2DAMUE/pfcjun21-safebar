<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SafeBar.NoStatusBar.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Safebar.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.SafeBar.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SafeBar.NoStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_light</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInput.LogIn" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/statelist_et_orange</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="hintTextColor">@color/white_light_alpha</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxBackgroundColor">@color/white_alpha</item>
        <item name="hintEnabled">true</item>
        <item name="android:strokeColor">@color/orange_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Login.EditText</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInput.Outlined.WithBackground" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/statelist_et_noalpha</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="hintTextColor">@color/orange_light</item>
        <item name="android:textColorHint">@color/green_light</item>
        <item name="boxBackgroundColor">@color/white_alpha</item>
        <item name="hintEnabled">true</item>
        <item name="android:strokeColor">@color/orange_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Login.EditText</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme.SafeBar.RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:progressTint">@color/green_dark</item>

    </style>

    <style name="Text.Titulo" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/oswald_light</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Text.AppBar" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Subtitulo.RobotoMedium.Italic" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Subtitulo.RobotoMedium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button.Material.BaseLogin" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">24sp</item>
        <item name="backgroundTint">@color/statelist_btn_orange</item>
    </style>

    <style name="ShapeAppearance.Login.EditText" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>