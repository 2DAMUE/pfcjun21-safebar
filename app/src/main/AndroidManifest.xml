<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dam.safebar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeBar">
        <activity android:name=".Restaurante"></activity>
        <activity android:name=".Cuenta" ></activity>
        <activity android:name=".Reservas" ></activity>
        <activity android:name=".Buscar" ></activity>
        <activity android:name=".Inicio" ></activity>
        <activity android:name=".SignUp"
            android:theme="@style/Theme.SafeBar.NoStatusBar"></activity>
        <activity android:name=".LogIn"
            android:theme="@style/Theme.SafeBar.NoStatusBar"></activity>
        <activity android:name=".Splash"
            android:theme="@style/Theme.SafeBar.NoStatusBar.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>